{
  "name": "@sweetlink/daemon",
  "version": "0.1.0",
  "private": true,
  "description": "Daemon process for SweetLink controlled Chrome sessions (internal workspace build input).",
  "type": "module",
  "bin": {
    "sweetlink-daemon": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "dev": "tsx src/index.ts",
    "start": "tsx src/index.ts",
    "test": "tsx --test \"tests/**/*.test.ts\"",
    "prepublishOnly": "pnpm run build"
  },
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/steipete/sweetlink.git",
    "directory": "apps/sweetlink/daemon"
  },
  "bugs": {
    "url": "https://github.com/steipete/sweetlink/issues"
  },
  "dependencies": {
    "@sweetlink/shared": "file:../shared",
    "dotenv": "^17.2.3",
    "random-word-slugs": "^0.1.7",
    "ws": "^8.18.3"
  }
}
