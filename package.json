{
  "name": "sweetlink",
  "version": "0.2.0",
  "license": "MIT",
  "private": false,
  "type": "module",
  "description": "Controlled-browser automation CLI for SweetLink sessions.",
  "homepage": "https://github.com/steipete/sweetlink",
  "repository": {
    "type": "git",
    "url": "https://github.com/steipete/sweetlink.git",
    "directory": "apps/sweetlink"
  },
  "bugs": {
    "url": "https://github.com/steipete/sweetlink/issues"
  },
  "keywords": [
    "sweetlink",
    "automation",
    "browser",
    "devtools",
    "cli"
  ],
  "bin": {
    "sweetlink": "./dist/src/index.js"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@types/node": "^22.19.0",
    "@types/ws": "^8.18.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc --project tsconfig.build.json && tsx scripts/fix-shared-imports.ts",
    "test": "vitest run --config vitest.config.ts",
    "lint": "biome lint ./src ./shared/src ./daemon/src ./tests",
    "standalone:post-sync": "tsx scripts/post-sync.ts",
    "prepublishOnly": "pnpm run build"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    },
    "./runtime/browser": {
      "types": "./dist/src/runtime/browser/index.d.ts",
      "import": "./dist/src/runtime/browser/index.js",
      "default": "./dist/src/runtime/browser/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.16.0"
  },
  "dependencies": {
    "arkregex": "^0.0.2",
    "chrome-cookies-secure": "^3.0.0",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "es-toolkit": "^1.41.0",
    "html2canvas": "^1.4.1",
    "playwright-core": "^1.56.1",
    "puppeteer": "^24.29.1",
    "random-word-slugs": "^0.1.7",
    "tldjs": "^2.3.2",
    "undici": "^7.16.0",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  }
}
