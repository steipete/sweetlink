{
  "name": "sweetlink",
  "version": "0.2.0",
  "license": "MIT",
  "private": false,
  "type": "module",
  "description": "Controlled-browser automation CLI for SweetLink sessions.",
  "homepage": "https://github.com/steipete/sweetlink",
  "repository": {
    "type": "git",
    "url": "https://github.com/steipete/sweetlink.git",
    "directory": "apps/sweetlink"
  },
  "bugs": {
    "url": "https://github.com/steipete/sweetlink/issues"
  },
  "keywords": [
    "sweetlink",
    "automation",
    "browser",
    "devtools",
    "cli"
  ],
  "bin": {
    "sweetlink": "./dist/src/index.js",
    "sweetlinkd": "./dist/daemon/src/index.js"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^25.0.3",
    "@types/ws": "^8.18.1",
    "jsdom": "^27.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "ultracite": "^6.5.0",
    "vitest": "^4.0.16"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc --project tsconfig.build.json",
    "test": "vitest run --config vitest.config.ts",
    "lint": "biome lint ./src ./shared/src ./daemon/src ./tests",
    "standalone:post-sync": "tsx scripts/post-sync.ts",
    "prepublishOnly": "pnpm run build"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    },
    "./runtime/browser": {
      "types": "./dist/src/runtime/browser/index.d.ts",
      "import": "./dist/src/runtime/browser/index.js",
      "default": "./dist/src/runtime/browser/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.16.0"
  },
  "dependencies": {
    "@steipete/sweet-cookie": "github:steipete/sweet-cookie#path:packages/core",
    "arkregex": "^0.0.5",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "es-toolkit": "^1.43.0",
    "html2canvas": "^1.4.1",
    "playwright-core": "^1.57.0",
    "puppeteer": "^24.34.0",
    "random-word-slugs": "^0.1.7",
    "tldjs": "^2.3.2",
    "undici": "^7.16.0",
    "ws": "^8.18.3",
    "zod": "^4.2.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "puppeteer",
      "tldjs"
    ],
    "overrides": {
      "node-gyp": "12.1.0"
    }
  }
}
